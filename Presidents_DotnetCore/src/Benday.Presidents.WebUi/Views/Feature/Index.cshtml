@model IEnumerable<Benday.Presidents.Api.DataAccess.Feature>

@{
    ViewBag.Title = "Index";
}

<h2>Feature Flag Manager: Overview</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="feature-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="feature-row">
        <td class="feature-cell">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="feature-cell">
            @Html.DisplayFor(modelItem => item.IsEnabled)
        </td>
        <td class="feature-cell">
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td class="feature-cell">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
